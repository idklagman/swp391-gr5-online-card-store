<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Online Card Store</display-name>
    
    <!-- Welcome Files -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    <!-- Filters -->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/customer/*</url-pattern>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    
    <filter>
        <filter-name>RoleFilter</filter-name>
        <filter-class>filter.RoleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RoleFilter</filter-name>
        <url-pattern>/customer/*</url-pattern>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    
    <!-- Servlets -->
    <!-- Home -->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>controller.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/</url-pattern>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    
    <!-- Authentication -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <servlet-class>controller.ForgotPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <url-pattern>/forgot-password</url-pattern>
    </servlet-mapping>

    <!-- Product and Category -->
    <servlet>
        <servlet-name>ProductListServlet</servlet-name>
        <servlet-class>controller.ProductListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductListServlet</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CategoryListServlet</servlet-name>
        <servlet-class>controller.CategoryListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryListServlet</servlet-name>
        <url-pattern>/categories</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductDetailServlet</servlet-name>
        <servlet-class>controller.ProductDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductDetailServlet</servlet-name>
        <url-pattern>/product/detail</url-pattern>
    </servlet-mapping>
    
    <!-- Payment -->
    <servlet>
        <servlet-name>PaymentCallbackServlet</servlet-name>
        <servlet-class>controller.PaymentCallbackServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PaymentCallbackServlet</servlet-name>
        <url-pattern>/payment/callback</url-pattern>
    </servlet-mapping>
    
    <!-- Customer Servlets -->
    <servlet>
        <servlet-name>CustomerDashboardServlet</servlet-name>
        <servlet-class>controller.customer.CustomerDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerDashboardServlet</servlet-name>
        <url-pattern>/customer/dashboard</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>WalletOverviewServlet</servlet-name>
        <servlet-class>controller.customer.WalletOverviewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WalletOverviewServlet</servlet-name>
        <url-pattern>/customer/wallet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>WalletTopupServlet</servlet-name>
        <servlet-class>controller.customer.WalletTopupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WalletTopupServlet</servlet-name>
        <url-pattern>/customer/wallet/topup</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>WalletTransactionHistoryServlet</servlet-name>
        <servlet-class>controller.customer.WalletTransactionHistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WalletTransactionHistoryServlet</servlet-name>
        <url-pattern>/customer/wallet/transactions</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PurchaseServlet</servlet-name>
        <servlet-class>controller.customer.PurchaseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PurchaseServlet</servlet-name>
        <url-pattern>/customer/purchase</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>OrderHistoryServlet</servlet-name>
        <servlet-class>controller.customer.OrderHistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderHistoryServlet</servlet-name>
        <url-pattern>/customer/orders</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>OrderDetailServlet</servlet-name>
        <servlet-class>controller.customer.OrderDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderDetailServlet</servlet-name>
        <url-pattern>/customer/orders/detail</url-pattern>
    </servlet-mapping>
    
    <!-- Admin Servlets -->
    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>controller.admin.AdminDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>StaffAccountsServlet</servlet-name>
        <servlet-class>controller.admin.StaffAccountsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaffAccountsServlet</servlet-name>
        <url-pattern>/admin/staff/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CustomerAccountsServlet</servlet-name>
        <servlet-class>controller.admin.CustomerAccountsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerAccountsServlet</servlet-name>
        <url-pattern>/admin/customers/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>RolesPermissionServlet</servlet-name>
        <servlet-class>controller.admin.RolesPermissionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RolesPermissionServlet</servlet-name>
        <url-pattern>/admin/roles/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SystemConfigurationServlet</servlet-name>
        <servlet-class>controller.admin.SystemConfigurationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SystemConfigurationServlet</servlet-name>
        <url-pattern>/admin/config</url-pattern>
    </servlet-mapping>

    <!-- Staff Servlets -->
    <servlet>
        <servlet-name>StaffDashboardServlet</servlet-name>
        <servlet-class>controller.staff.StaffDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaffDashboardServlet</servlet-name>
        <url-pattern>/staff/dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CategoryManagementServlet</servlet-name>
        <servlet-class>controller.staff.CategoryManagementServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryManagementServlet</servlet-name>
        <url-pattern>/staff/categories</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductManagementServlet</servlet-name>
        <servlet-class>controller.staff.ProductManagementServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductManagementServlet</servlet-name>
        <url-pattern>/staff/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CardCodeImportServlet</servlet-name>
        <servlet-class>controller.staff.CardCodeImportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CardCodeImportServlet</servlet-name>
        <url-pattern>/staff/cardcodes/import</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CardCodeListServlet</servlet-name>
        <servlet-class>controller.staff.CardCodeListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CardCodeListServlet</servlet-name>
        <url-pattern>/staff/cardcodes/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrdersManagementServlet</servlet-name>
        <servlet-class>controller.staff.OrdersManagementServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrdersManagementServlet</servlet-name>
        <url-pattern>/staff/orders</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ResendCardCodeServlet</servlet-name>
        <servlet-class>controller.staff.ResendCardCodeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResendCardCodeServlet</servlet-name>
        <url-pattern>/staff/resend-card</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RevenueReportsServlet</servlet-name>
        <servlet-class>controller.staff.RevenueReportsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RevenueReportsServlet</servlet-name>
        <url-pattern>/staff/revenue</url-pattern>
    </servlet-mapping>
    
    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/views/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/views/error/500.jsp</location>
    </error-page>
    
</web-app>

